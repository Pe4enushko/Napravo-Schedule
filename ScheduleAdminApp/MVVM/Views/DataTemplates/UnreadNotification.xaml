<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScheduleAdminApp.MVVM.Views.DataTemplates.UnreadNotification">
    <VerticalStackLayout Background="#FFFAFA">
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="{Binding Moment}"/>
                        <Span Text="              "/>
                        <Span Text="новое" TextColor="#E66"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label Text="{Binding Header}"/>
        <Label Text="{Binding Message}"/>
    </VerticalStackLayout>
</ContentView>
