<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="napravo_schedule.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:napravo_schedule"
    xmlns:pages="clr-namespace:napravo_schedule.MVVM.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Расписание"
            ContentTemplate="{DataTemplate pages:CalendarPage}"
            Route="Schedule"/>
        <ShellContent
            Title="Уведомления"
            ContentTemplate="{DataTemplate pages:NotificationsPage}"
            Route="Notifications"/>
    </TabBar>

</Shell>
